<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yzy.diary.UpdateActivity">

    <!-- 用来取消焦点-->
    <TextView
        android:id="@+id/activity_update_textView_diarylabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="3dp"
        android:text="@string/diary_lable"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/activity_update_editText_diarylabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/activity_update_textView_diarylabel"
        android:layout_toRightOf="@+id/activity_update_textView_diarylabel"
        android:ems="10"
        android:inputType="text"
        android:singleLine="true"
        android:text="@string/diary_label_def" />

    <EditText
        android:id="@+id/activity_update_editText_diarycontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_update_editText_diarylabel"
        android:background="@drawable/bg_edittext"
        android:gravity="top|start"
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:minLines="25"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollbars="vertical" />

</RelativeLayout>
